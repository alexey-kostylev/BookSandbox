<form method="post" id="addBook">
    <div class="container_16">
        <h1 class="title-01">
            Web API sample
        </h1>
    </div>
    <div class="container_16">
        <div class="grid_16 body-container">
            <div class="margin grid_6 alpha">
                <label for="Name">
                    Name
                </label><br />
                <input type="text" id="name" name="Name" class="text grid_4" />
                <br class="clear" />
                <label for="Price">
                    Price
                </label><br />
                <input type="text" id="price" name="Price" class="text grid_4" />
                <br class="clear" />
                <input type="submit" value="Add" class="button small green" />               
                
                <br class="clear" />
                <br />
                <label for="bookId">
                    Search By ID
                </label>
                <br />
                <input type="text" id="bookId" size="20" placeholder="book id" class="text grid_4" /><br class="clear" />
                <input type="button" value="Search" onclick="find();" class="button small gray" />
                <br />
                <strong id="book">
                    @*   <label id="book">
                        </label>*@
                </strong>
                <br />                
            </div>
            <br />
            
            <div class="grid_8 omega">
                <input type="button" value="Refresh" id="refreshButton" />
                <br />
                <img id="loader" src="/images/ajax-loader.gif" />
                <br />
                
                <ul id="books" class="books"></ul>
            </div>
        </div>
    </div>
    <br class="clear" />
    <div class="footer clearfix">
    </div>
</form>

@section scripts {
    <script type="text/javascript" src="~/Scripts/custom/BookController.js"></script>

    <script id="bookTemplate" type="text/html">
        <li>
            <p>
                <strong> Book ID:</strong> ${Id}
                <br />
                <strong> Book Name:</strong> ${Name}
                <br />
                <strong> Price: $</strong> ${ Price }
            </p>
            <p>
                <a href="/api/Books/${ Id }" class="button small red removeBook">Remove</a>                
            </p>
        </li>
    </script>
}